<section class="najd-countdown" data-end="{{ theme.settings.countdown_end_date }}">
  <div class="najd-container najd-countdown__inner">
    <span class="najd-badge najd-badge--danger">عرض ينتهي قريباً</span>
    <h2>{{ theme.settings.countdown_title }}</h2>
    <div class="najd-countdown__boxes">
      <div class="najd-countdown__box"><span id="cd-days">00</span><small>يوم</small></div>
      <span class="najd-countdown__sep">:</span>
      <div class="najd-countdown__box"><span id="cd-hours">00</span><small>ساعة</small></div>
      <span class="najd-countdown__sep">:</span>
      <div class="najd-countdown__box"><span id="cd-mins">00</span><small>دقيقة</small></div>
      <span class="najd-countdown__sep">:</span>
      <div class="najd-countdown__box"><span id="cd-secs">00</span><small>ثانية</small></div>
    </div>
    <a href="/offers" class="najd-btn najd-btn--danger">تسوق العروض الآن</a>
  </div>
</section>
