{
  "name": "Najd Campaign Theme",
  "version": "1.0.0",
  "description": "Enterprise-level Salla theme optimized for high-conversion advertising campaigns.",
  "preview_images": [],
  "features": [
    "products_list",
    "products_slider"
  ],
  "settings": [
    {
      "type": "header",
      "title": {
        "ar": "إعدادات نظام الحملات (Campaign OS)",
        "en": "Campaign OS Settings"
      }
    },
    {
      "type": "range",
      "id": "campaign_mode_active",
      "label": {
        "ar": "تفعيل وضع الحملة",
        "en": "Enable Campaign Mode"
      },
      "default": 0,
      "min": 0,
      "max": 1,
      "step": 1
    },
    {
      "type": "select",
      "id": "layout_mode",
      "label": {
        "ar": "نوع التخطيط",
        "en": "Layout Mode"
      },
      "options": [
        {
          "value": "store",
          "label": {
            "ar": "متجر تقليدي",
            "en": "Standard Store"
          }
        },
        {
          "value": "campaign",
          "label": {
            "ar": "صفحة هبوط",
            "en": "Landing Page"
          }
        },
        {
          "value": "funnel",
          "label": {
            "ar": "قمع بيع (Funnel)",
            "en": "Sales Funnel"
          }
        },
        {
          "value": "hybrid",
          "label": {
            "ar": "مختلط",
            "en": "Hybrid"
          }
        }
      ],
      "default": "store"
    },
    {
      "type": "header",
      "title": {
        "ar": "الذكاء الاصطناعي و التخصيص",
        "en": "Intelligence & Personalization"
      }
    },
    {
      "type": "checkbox",
      "id": "traffic_detection",
      "label": {
        "ar": "كشف مصدر الزيارات (Traffic Source)",
        "en": "Detect Traffic Source"
      },
      "default": true
    },
    {
      "type": "checkbox",
      "id": "time_messaging",
      "label": {
        "ar": "رسائل مرتبطة بالوقت",
        "en": "Time-based Messaging"
      },
      "default": true
    },
    {
      "type": "header",
      "title": {
        "ar": "إعدادات الهوية (Design System)",
        "en": "Design System"
      }
    },
    {
      "type": "color",
      "id": "color_primary",
      "label": {
        "ar": "اللون الأساسي",
        "en": "Primary Color"
      },
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "typography_profile",
      "label": {
        "ar": "ملف الخطوط",
        "en": "Typography Profile"
      },
      "options": [
        {
          "value": "modern",
          "label": {
            "ar": "عصري (Modern)",
            "en": "Modern"
          }
        },
        {
          "value": "classic",
          "label": {
            "ar": "كلاسيكي (Classic)",
            "en": "Classic"
          }
        },
        {
          "value": "bold",
          "label": {
            "ar": "جريء (Bold)",
            "en": "Bold"
          }
        }
      ]
    },
    {
      "type": "header",
      "title": {
        "ar": "محفزات التحويل (Conversion Triggers)",
        "en": "Conversion Triggers"
      }
    },
    {
      "type": "checkbox",
      "id": "sticky_cta_enabled",
      "label": {
        "ar": "زر الشراء العائم",
        "en": "Sticky CTA"
      },
      "default": true
    },
    {
      "type": "checkbox",
      "id": "exit_intent_enabled",
      "label": {
        "ar": "نافذة محاولة الخروج",
        "en": "Exit Intent Popup"
      },
      "default": true
    },
    {
      "type": "header",
      "title": {
        "ar": "الأداء (Performance)",
        "en": "Performance Settings"
      }
    },
    {
      "type": "checkbox",
      "id": "lazy_load",
      "label": {
        "ar": "تحميل كسلان (Lazy Load)",
        "en": "Lazy Loading"
      },
      "default": true
    },
    {
      "type": "checkbox",
      "id": "perf_optimize_vitals",
      "label": {
        "ar": "تحسين Core Web Vitals",
        "en": "Optimize Core Web Vitals"
      },
      "default": true
    }
  ],
  "components": []
}